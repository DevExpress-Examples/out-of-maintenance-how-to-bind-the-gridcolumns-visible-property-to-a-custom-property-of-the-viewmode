<Window x:Class="WpfApplication1.Window1"       
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Window1" Height="314" Width="613" 
        xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
        xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
        xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
        xmlns:local="clr-namespace:WpfApplication1" dx:ThemeManager.ThemeName="Azure">      
        <Grid>
            <dxg:GridControl Margin="12,12,170,30" Name="gridControl1" >
            <dxg:GridControl.Columns>
                <dxg:GridColumn FieldName="Name"/>                
                <dxg:GridColumn FieldName="IsFired"/>              
            </dxg:GridControl.Columns>
            <dxg:GridControl.View>
                <dxg:TableView x:Name="view" />
            </dxg:GridControl.View>
        </dxg:GridControl>
        <Button Height="23" HorizontalAlignment="Right" Margin="0,31.4,12,0" Name="button1" VerticalAlignment="Top" Width="143" Click="button1_Click">Change the current row</Button>
    </Grid>
</Window>
